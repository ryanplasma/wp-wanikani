{
  "name": "ryanplasma/wp-wanikani",
  "description": "WordPress plugin for displaying WaniKani stats",
  "type": "wordpress-plugin",
  "require": {
    "composer/installers": "^1.2",
    "rmccue/requests": "^1.7"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "WPWaniKani\\": [
        "src/"
      ]
    }
  },
  "license": "GPLv2 or later",
  "authors": [
    {
      "name": "Ryan Plas",
      "email": "ryan@wordplas.com"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpcs -p . --standard=PSR2 --ignore=*/vendor/*,wp-wanikani.php"
  }
}
